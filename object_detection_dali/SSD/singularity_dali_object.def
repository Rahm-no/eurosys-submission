Bootstrap: docker
From: nvcr.io/nvidia/pytorch:22.10-py3

%files
    . /workspace/object_detection_dali



%post
    apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y git && \
    apt-get install -y vim && \

    chmod 777 /etc/ld.so.cache

    pip install --upgrade pip
    pip install --disable-pip-version-check -r /workspace/object_detection_dali/requirements.txt


%environment
    export LC_ALL=C.UTF-8
    export LANG=C.UTF-8

    export PATH=/workspace/object_detection_dali:$PATH

%runscript
    exec /bin/bash "$@"